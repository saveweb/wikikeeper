# Application
APP_NAME=WikiKeeper
APP_VERSION=0.2.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgres://wikikeeper:wikikeeper_password@localhost:5432/wikikeeper?sslmode=disable

# MongoDB (仅用于迁移读取)
MONGODB_URI=mongodb://root:password@localhost:27017
MONGODB_DB_NAME=wikikeeper

# HTTP Client
HTTP_TIMEOUT=30.0
HTTP_USER_AGENT=WikiKeeper/0.2.0 (https://wikikeeper.saveweb.org/)

# Collection Settings
COLLECT_DELAY=1.5
COLLECT_BATCH_SIZE=50

# Archive.org
ARCHIVE_CHECK_DELAY=0.5

# Logging
LOG_LEVEL=INFO
